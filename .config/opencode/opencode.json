{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "exa": {
      "enabled": true,
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp",
      "headers": {}
    },
    "github": {
      "enabled": true,
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp",
      "headers": {
        "Authorization": "Bearer ${env:GITGUB_TOKEN}"
      }
    },
    "chrome-devtools": {
      "enabled": true,
      "type": "local",
      "command": [
        "pnpx",
        "chrome-devtools-mcp@latest"
      ]
    },
    "shadcn": {
      "enabled": true,
      "type": "local",
      "command": [
        "pnpx",
        "shadcn@latest",
        "mcp"
      ]
    },
    "convex": {
      "enabled": true,
      "type": "local",
      "command": [
        "pnpx",
        "convex@latest",
        "mcp",
        "start"
      ]
    },
    "clerk": {
      "enabled": true,
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@clerk/agent-toolkit",
        "-p",
        "local-mcp"
      ],
      "environment": {
        "CLERK_SECRET_KEY": "{env:CLERK_SECRET_KEY}"
      }
    }
  }
}
